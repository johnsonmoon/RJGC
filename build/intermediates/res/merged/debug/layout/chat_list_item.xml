<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_margin="12sp"
    android:padding="4dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/chat_list_item_ImageView"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/temp"
        android:padding="4sp"/>

    <TextView
        android:id="@+id/chat_list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="14sp" 
        android:padding="4sp"/>

    <TextView
        android:id="@+id/chat_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/chat_list_item_ImageView"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/chat_list_item_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/chat_list_item_name"
        android:layout_below="@+id/chat_list_item_name"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

</RelativeLayout> <!-- From: file:/C:/Users/Administrator/AndroidStudioProjects/RJGC/res/layout/chat_list_item.xml -->