<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  
    <ImageView
        android:id="@+id/search_result_up_imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="center|center_horizontal|clip_horizontal"
        android:adjustViewBounds="true"
        android:src="@drawable/search_result_up_picture" />
    
    <ListView 
        android:id="@+id/search_result_listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dividerHeight="4sp"
        android:layout_below="@id/search_result_up_imageView">
        
    </ListView>

</RelativeLayout>
